<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <edu.uci.crayfis.ProgressWheel
        android:id="@+id/pw_spinner"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        ProgressWheel:text="Stabilization"
        ProgressWheel:textColor="#FFF"
        ProgressWheel:textSize="20sp"
        ProgressWheel:rimColor="#FFF"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barColor="#FF0000"
        ProgressWheel:barWidth="50dp"
        ProgressWheel:rimWidth="30dp" />

    <edu.uci.crayfis.widget.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        tools:text="Time: 1h2m3s \nRate: 23fps"/>

    <edu.uci.crayfis.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:id="@+id/message_view"/>

    <edu.uci.crayfis.widget.AppBuildView
        android:id="@+id/app_build_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textSize="8sp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>