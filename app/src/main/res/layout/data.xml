<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:src="@drawable/crayfish" />

    <edu.uci.crayfis.ProgressWheel
        android:id="@+id/pw_spinner"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="250dp"
        ProgressWheel:text=" "
        ProgressWheel:textColor="#FFF"
        ProgressWheel:textSize="20sp"
        ProgressWheel:rimColor="#FFF"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barColor="#FF0000"
        ProgressWheel:barWidth="15dp"
        ProgressWheel:rimWidth="20dp" />

    <edu.uci.crayfis.widget.LightMeter
        android:id="@+id/lightmeter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        />

    <edu.uci.crayfis.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:id="@+id/message_view"/>







</LinearLayout>